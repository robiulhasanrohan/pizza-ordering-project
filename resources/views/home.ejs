<%- include('./layouts/header'); -%>

    <section class="hero py-16" id="menu">
        <div class="container mx-auto flex items-center ">
            <div class="w-1/2">
                <h6 class="text-lg"><em>Are you hungry?</em></h6>
                <h1 class="text-6xl f ont-bold">Don't wait !</h1>
                <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
            </div>
            <div class="w-1/2">
                <img src="/img/hero-pizza.png" alt="">
            </div>
        </div>
    </section>
    <section class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold mb-8"></h1>
        <div class="grid grid-cols-4 gap-x-12 gap-y-12">
            <% pizaas.forEach((pizaa)=>{ %>

                <div class="w-64">
                    <img src="/img/<%= pizaa.image %>" alt="" class="h-40 mx-auto mb-4">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg">
                            <%= pizaa.name %>
                        </h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs">
                            <%= pizaa.size %>
                        </span>
                    </div>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg ml-12">â‚¹<%= pizaa.price %></span>
                        <button class="add-to-cart px-6 py-1 rounded-full flex items-center ml-6">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>


                <% }) %>





        </div>
    </section>
    <%- include('./layouts/footer'); -%>